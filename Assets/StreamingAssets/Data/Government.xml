					<!-- Requiriment to enact this power -->
				<Require condition="all">
					<Body ref="god"/>
					<Legislative/>
				</Require>
			</Action>
			<Action type="appoint"/>
			<Action type="approve"/>
			<Action type="impeach"/>
			<Action type="" rule="and">
			</Action>
			<Action type="delete">
			</Action>
			<!-- Condition to start a end-of term -->
			<End condition="all">
				<Condition type="length">5</Condition>
				<Condition type="script">endTermUser</Condition>
			</End>
